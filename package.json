{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf build public/build",
    "postinstall": "remix setup cloudflare-workers",
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:css && remix build",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch --kv CONTENT",
    "dev:css": "cross-env NODE_ENV=development tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --watch",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "npm run build && wrangler publish"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "@tailwindcss/typography": "^0.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "miniflare": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tailwindcss-cli": "^0.1.2",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
